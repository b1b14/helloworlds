@{
	ViewData["Title"] = "Página Inicial";
}

<div class="container py-5">

	<div class="text-center mb-5">
		<h1 class="display-4 fw-bold">
			<i class="bi bi-list-check">Tarefas</i>
			<p class="lead text-muted">Gerencie suas tarefas de uma forma mais simples</p>
			<a asp-controller="Tarefas" asp-action="Index" class="btn btn-primary btn-lg">Ver minhas tarefas</a>
	</div>
	<div class="row text-center">



		<div class="col-12 col-md-4 mb-4">

			<div class="card shadow-sm h-100">
				<div class="card-body">
					<i class="bi bi-plus-circle display-4 text-primary mb-3"></i>
					<h5>Adicionar uma nova tarefa</h5>
					<p class="card-text text-muted">Crie novas tarefas rapidamente, para não perder nenhuma atividade</p>
				</div>
			</div>

		</div>

		<div class="col-12 col-md-4 mb-4">

			<div class="card shadow-sm h-100">
				<div class="card-body">
					<i class="bi bi-check-circle display-4 text-success mb-3"></i>
					<h5>Marcar como Concluida</h5>
					<p class="card-text text-muted">Marque suas tarefas como concluidas, para organizar seu planejamento!</p>
				</div>
			</div>
		</div>

		<div class="col-12 col-md-4 mb-4">

			<div class="card shadow-sm h-100">
				<div class="card-body">
					<i class="bi bi-trash display-4 text-danger mb-3"></i>
					<h5>Excluir suas tarefas</h5>
					<p class="card-text text-muted">Exclua suas tarefas que não são mais necessárias de maneira rápida e fácil</p>
				</div>
			</div>
		</div>

	</div>
</div>