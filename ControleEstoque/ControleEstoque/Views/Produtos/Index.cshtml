@model IEnumerable<ControleEstoque.Models.Produto>

@{
	ViewData["Title"] = "Index";
}

<h1>Produtos</h1>

<p>
	<a asp-action="Create" class="btn btn-secondary">Criar Novo</a>
</p>

<form asp-controller="Produtos" asp-action="Buscar" method="get" class="mb-3">
	<div class="input-group">
		<input type="text" name="termo" class="form-control" placeholder="Buscar por nome do produto..." value=@ViewData["termoBusca"] />
		<button class="btn btn-outline-secondary" type="submit">Buscar</button>
	</div>
</form>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Marca)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Categoria)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EstoqueAtual)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EstoqueMinimo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DataValidade)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PrecoCusto)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.PrecoVenda)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Descricao)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Marca)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Categoria.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EstoqueAtual)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EstoqueMinimo)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DataValidade)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PrecoCusto)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PrecoVenda)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Descricao)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.ProdutoId">Edit</a>
					<a asp-action="Delete" asp-route-id="@item.ProdutoId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>


