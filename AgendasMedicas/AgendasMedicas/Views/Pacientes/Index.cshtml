@model IEnumerable<AgendasMedicas.Models.Paciente>

@{
	ViewData["Title"] = "Cadastro de Pacientes";
}
<div class="container text-light">
	<h1>Cadastro de Pacientes</h1>

	<p>
		<a asp-action="Create" class="btn btn-outline-light btn-lg w-25"><i class="bi bi-plus-circle"></i>Adicionar</a>
	</p>
	<table class="table table-striped table-borderless">
		<thead>
		<th class="bg-white">
			Prontuário
		</th>
		<th class="bg-white">
				@Html.DisplayNameFor(model => model.Nome)
		</th>
		<th class="bg-white">
				@Html.DisplayNameFor(model => model.CPF)
		</th>
		<th class="bg-white">
			Data Nascimento
		</th>
		<th class="bg-white">
				@Html.DisplayNameFor(model => model.Celular)
		</th>
		<th class="bg-white">
			E-mail
		</th>
		<th class="bg-white">
			Ações
		</th>
		</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Prontuario)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CPF)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DataNascimento)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Celular)
					</td>

					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.PacienteId" class="btn btn-outline btn-light btn-outline-dark row-6"><i class="bi bi-pen"></i> Editar</a> |
						<a asp-action="Delete" asp-route-id="@item.PacienteId" class="btn btn-outline btn-light btn-outline-dark row-6"><i class="bi bi-trash3"></i> Excluir</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>